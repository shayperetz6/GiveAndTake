<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white">


    <Button
        android:id="@+id/addItem"
        android:layout_width="82dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="313dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/cadetblue"
        android:text="+" />

    <TextView

        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:fontFamily="@font/arizonia"
        android:text="Give&amp;Take"
        android:textAlignment="center"
        android:textColor="@color/cadetblue"
        android:textSize="@dimen/app_name_size" />

    <Button
        android:id="@+id/filterDate"
        android:layout_width="130dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="297dp"
        android:backgroundTint="@color/cadetblue"
        android:text="Filter By Date"
        android:textSize="12dp" />

    <Button
        android:id="@+id/filterCity"
        android:layout_width="130dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="297dp"
        android:backgroundTint="@color/cadetblue"
        android:text="Filter By City"
        android:textSize="12dp" />

    <Button
        android:id="@+id/filterGive"
        android:layout_width="130dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="164dp"
        android:backgroundTint="@color/cadetblue"
        android:text="Filter By Give"
        android:textSize="12dp" />

    <Button
        android:id="@+id/filterTake"
        android:layout_width="130dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="164dp"
        android:backgroundTint="@color/cadetblue"
        android:text="Filter By Need"
        android:textSize="12dp" />

    <Button
        android:id="@+id/CancelFilter"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="109dp"
        android:backgroundTint="@color/cadetblue"
        android:text="Esc" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="537dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="60dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scrollbars="vertical" />

</RelativeLayout>
